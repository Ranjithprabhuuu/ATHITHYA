<MyLayout>:
    name:"First"
    Label:
        markup:True
        text:"[size=150]Athithya[/size]"
        font_size:50
        bold:True
        italic:True
        color:(1,1,1,0.7)
    RoundedButton:
        text:"PRESS"
        size_hint:(0.3,0.1)
        pos_hint:{'center_x':0.5,'center_y':0.2}
        on_press:
            app.root.current="Second"
            root.manager.transition.direction="left"
<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    canvas.before:
        Color:
            rgba:(1/255.0,60/255.0,60/255.0,1)
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[40]
